# Database
DATABASE_URL=postgres://user:pass@localhost:5432/unifiedcron

# Encryption key for secrets (32 bytes base64)
ENCRYPTION_KEY=replace_me_with_32_bytes_key

# JWT Secret for API authentication (can use same as ENCRYPTION_KEY)
JWT_SECRET=replace_me_with_32_bytes_key

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=replace_me_with_32_bytes_secret

# OAuth Providers (optional - only enable what you need)
# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Optional test credentials
TEST_SUPABASE_URL=https://your-project.supabase.co
TEST_SUPABASE_ANON=eyJ...
TEST_GITHUB_TOKEN=ghp_...

# API Configuration
API_PORT=3001
NODE_ENV=development

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_GOOGLE_CLIENT_ID=
NEXT_PUBLIC_GITHUB_CLIENT_ID=
